<UserControl x:Class="KINO_Degtinnikov.Pages.Afisha.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KINO_Degtinnikov.Pages.Afisha.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="600">
    <Grid Background="Gainsboro" Margin="0,0,-111,0">
        <Grid Margin="28" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100px"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Images/pngtree-movie-film-simple-blue-background-image_901044.jpg" Width="56" Height="80" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,2,0,0"/>
            <Label Grid.Column="1" Content="Кинотеатр" HorizontalAlignment="Left" Margin="8,5,0,0" VerticalAlignment="Top" Width="101"/>
            <Label Grid.Column="1" Content="Наименование" HorizontalAlignment="Left" Margin="8,87,0,0" VerticalAlignment="Top" Width="96"/>
            <Label Grid.Column="2" Content="Дата:" HorizontalAlignment="Left" Margin="8,6,0,0" VerticalAlignment="Top" Width="143"/>
            <TextBox x:Name="kinoteatr" Grid.Column="1" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="255" Height="33" IsEnabled="False"/>
            <TextBox x:Name="time" Grid.Column="2" HorizontalAlignment="Left" Margin="116,34,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="154" Height="33" IsEnabled="False"/>
            <TextBox x:Name="name" Grid.Column="1" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"  Width="255" Height="33" IsEnabled="False"/>
            <Button x:Name="bthDelete" Background="AntiqueWhite" Content="Удалить" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Height="31" Width="76" Click="Delete"/>
            <Button x:Name="bthUpdate" Foreground="White" Background="Orange" Content="Изменить" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Height="31" Width="76" Click="Update"/>
            <DatePicker x:Name="Date" Grid.Column="2" HorizontalAlignment="Left" Margin="6,36,0,0" VerticalAlignment="Top" Height="30" Width="105"  IsEnabled="False"/>
            <TextBox x:Name="Price" Grid.Column="2" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" Height="33" IsEnabled="False"/>
            <Label Grid.Column="2" Content="Стоимость" HorizontalAlignment="Left" Margin="8,86,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
