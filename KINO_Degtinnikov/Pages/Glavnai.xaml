<Page x:Class="KINO_Degtinnikov.Pages.Glavnai"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KINO_Degtinnikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Glavnai">

    <Grid Background="#FFEBEBEB">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <Button   Content="КиноТеатр" FontSize="20" Width="200" Height="50" Margin="10" Click="Kino"/>
            <Button Content="Афиши" FontSize="20" Width="200" Height="50" Margin="10" Click="Afisha"/>
        </StackPanel>

      
        <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ContentControl Content="{Binding ElementName=stackPanel}" />
        </Viewbox>
    </Grid>
</Page>