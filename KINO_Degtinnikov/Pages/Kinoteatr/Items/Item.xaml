<UserControl x:Class="KINO_Degtinnikov.Pages.Kinoteatr.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KINO_Degtinnikov.Pages.Kinoteatr.Items"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="519">
    <Grid Background="Gainsboro">
        <Grid Margin="28" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100px"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Images/Kino.png" Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Grid.Column="1" Content="Наименование" HorizontalAlignment="Left" Margin="8,5,0,0" VerticalAlignment="Top" Width="101"/>
            <Label Grid.Column="1" Content="Количество" HorizontalAlignment="Left" Margin="8,87,0,0" VerticalAlignment="Top" Width="75"/>
            <Label Grid.Column="2" Content="Количество залов" HorizontalAlignment="Left" Margin="8,6,0,0" VerticalAlignment="Top" Width="143"/>
            <TextBox x:Name="name" Grid.Column="1" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="163" Height="33" IsEnabled="False"/>
            <TextBox x:Name="count_zal" Grid.Column="2" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="153" Height="33" IsEnabled="False"/>
            <TextBox x:Name="count" Grid.Column="1" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"  Width="167" Height="33" IsEnabled="False"/>
            <Button x:Name="bthDelete" Background="AntiqueWhite" Content="Удалить" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Height="31" Width="77" Click="Delete"/>
            <Button x:Name="bthUpdate" Foreground="White" Background="Orange" Content="Изменить" HorizontalAlignment="Center" Margin="0,119,0,0" VerticalAlignment="Top" Height="31" Width="77" Click="Update"/>
        </Grid>
    </Grid>
</UserControl>
