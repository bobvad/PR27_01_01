<Page x:Class="KINO_Degtinnikov.Pages.Kinoteatr.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KINO_Degtinnikov.Pages.Kinoteatr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="Gainsboro">
        <Grid Margin="28" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100px"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Images/Kino.png" Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Grid.Column="1" Content="Наименование" HorizontalAlignment="Left" Margin="8,5,0,0" VerticalAlignment="Top" Width="101"/>
            <Label Grid.Column="1" Content="Количество" HorizontalAlignment="Left" Margin="8,87,0,0" VerticalAlignment="Top" Width="75"/>
            <Label Grid.Column="2" Content="Количество залов" HorizontalAlignment="Left" Margin="8,6,0,0" VerticalAlignment="Top" Width="143"/>
            <TextBox x:Name="name" Grid.Column="1" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="306" Height="33"/>
            <TextBox x:Name="count_zal" Grid.Column="2" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="306" Height="33"/>
            <TextBox x:Name="count" Grid.Column="1" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap"  VerticalAlignment="Top"  Width="306" Height="33"/>
            <Button x:Name="bthAdd" Grid.Column="2" Background="AntiqueWhite" Content="Добавить" HorizontalAlignment="Left" Margin="212,116,0,0" VerticalAlignment="Top" Height="26" Width="98" Click="AddRecord"/>
        </Grid>
    </Grid>
</Page>
